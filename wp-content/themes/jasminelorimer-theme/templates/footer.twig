<footer id="footer">
    <nav id="footer-nav" class="navbar-expand">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="hdr-logo" role="banner">
                        <a class="hdr-logo-link" href="{{site.url}}" rel="home">{{site.name}}</a>
                    </h1>
                </div>

                <div class="col-auto d-flex align-items-center">
                    <ul class="navbar-nav">
                        {% for nav_item in mainNav %}
                            {% if function('is_page', nav_item.slug) %}
                            <li class="nav-item active">
                            {% else %}
                            <li class="nav-item">
                            {% endif %}
                                <a href="{{ nav_item.link }}" class="nav-link">
                                    {{ nav_item.name }}
                                    {% if function('is_page', nav_item.slug) %}
                                        <span class="sr-only">(current)</span>
                                    {% endif %}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="col d-flex align-items-center">
                    <div class="d-flex w-100 justify-content-end">
                        <ul class="navbar-nav social-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="https://www.instagram.com/jasmine.lorimer" target="_blank">
                                    <i class="fa fa-instagram"></i>
                                    <span class="sr-only">Instagram</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="https://twitter.com/jazlor1" target="_blank">
                                    <i class="fa fa-twitter"></i>
                                    <span class="sr-only">Twitter</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="https://www.youtube.com/channel/UCc6MemdlxFOQybEjitYuDsg" target="_blank">
                                    <i class="fa fa-youtube-play"></i>
                                    <span class="sr-only">YouTube</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="subfooter">
        {{"now"|date('Y')}} Jasmine Lorimer All Rights Reserved | Privacy Policy | Terms of Use
    </div>
</footer>